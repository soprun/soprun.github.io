---
layout: default
---

{%- if page.title -%}
    <h1 class="page-heading">{{ page.title }}</h1>
{%- endif -%}

{{ content }}

{% if site.paginate %}
    {% assign posts = paginator.posts %}
{% else %}
    {% assign posts = site.posts %}
{% endif %}

{%- if posts.size > 0 -%}

    {%- if page.list_title -%}
        <h2 class="post-list-heading">{{ page.list_title }}</h2>
    {%- endif -%}

    {%- assign date_format = site.minima.date_format | default: "%b %-d, %Y" -%}

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for post in posts %}
            <div class="col">
                <article class="card"
                         itemid="{{ post.url | relative_url }}"
                         itemprop="blogPost"
                         itemscope
                         itemtype="https://schema.org/BlogPosting">
                    <figure class="figure mb-0">
                        <a href="{{ post.url | relative_url }}">
                            <img src="https://picsum.photos/200?id={{ post.id }}"
                                 class="card-img-top figure-img img-fluid"
                                 itemprop="image"
                                 alt="{{ post.title | escape }}">
                        </a>
                        {% if post.figcaption %}
                            <figcaption class="figure-caption">
                                {{ post.figcaption }}
                            </figcaption>
                        {% endif %}
                    </figure>
                    <section class="card-body">
                        <h2 class="card-title fs-4">
                            <a href="{{ post.url | relative_url }}" class="text-decoration-none">
                                {{ post.title | escape }}
                            </a>
                        </h2>

                        {% if post.subtitle %}
                            <p class="card-subtitle mb-4 text-muted fs-6">
                                <small>{{ post.subtitle | escape }}</small>
                            </p>
                        {% endif %}

                        <div class="card-text">
                            {{ post.excerpt | strip_html | escape | truncatewords: 30 }}
                            <a href="{{ post.url | relative_url }}" class="text-decoration-none">
                                read more...
                            </a>
                        </div>
                    </section>
                    <footer class="card-footer">
                        <p>
                            <time class="text-muted" itemprop="datePublished"
                                  datetime="{{ post.date | date: '%Y-%m-%d' }}">
                                {{ post.date | date_to_long_string }}
                            </time>
                        </p>

                        {% assign categories_size = post.categories | size %}
                        {% if categories_size != 0 %}
                            <div class="card-text">
                                <span>Categories:</span>
                                {% for categoriey in post.categories %}
                                    <span class="badge bg-primary">{{ categoriey }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% assign tags_size = post.tags | size %}
                        {% if tags_size != 0 %}
                            <div class="card-text">
                                <span>Tags:</span>
                                {% for tag in post.tags %}
                                    <span class="badge bg-primary">{{ tag }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </footer>
                </article>
            </div>
        {% endfor %}
    </div>

    {% if site.paginate %}
        <div class="pager">
            <ul class="pagination">
                {%- if paginator.previous_page %}
                    <li>
                        <a href="{{ paginator.previous_page_path | relative_url }}"
                           class="previous-page">{{ paginator.previous_page }}</a>
                    </li>
                {%- else %}
                    <li>
                        <div class="pager-edge">•</div>
                    </li>
                {%- endif %}
                <li>
                    <div class="current-page">{{ paginator.page }}</div>
                </li>
                {%- if paginator.next_page %}
                    <li>
                        <a href="{{ paginator.next_page_path | relative_url }}"
                           class="next-page">{{ paginator.next_page }}</a>
                    </li>
                {%- else %}
                    <li>
                        <div class="pager-edge">•</div>
                    </li>
                {%- endif %}
            </ul>
        </div>
    {%- endif %}
{%- endif -%}