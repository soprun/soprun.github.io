---
layout: default
---

<article id="{{ page.id }}">
    <header class="mb-3">
        <h1>{{ page.title }}</h1>
        <span>{{ page.date | date: "%-d %B %Y" }}</span>
        {% assign tags_size = page.tags | size %}
        {% if tags_size != 0 %}
            <br>
            <span>Tags:</span>
            {% for tag in page.tags %}
                <span class="badge bg-primary">{{ tag }}</span>
            {% endfor %}
        {% endif %}
    </header>
    {{ content }}
</article>
