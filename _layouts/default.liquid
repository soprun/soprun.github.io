{%- include variables.liquid -%}
<!DOCTYPE html>
<html lang="{{ page.lang | default: site.lang }}">
{%- include head.liquid %}
<body class="{{ page.layout }}">
{%- include head/google-tag-manager-body.liquid -%}
{%- include header.liquid -%}
<main id="main" class="container-lg" role="main" aria-label="content">
    <div class="row">
        <aside id="sidebar"
               class="com col-12 col-sm-5 col-md-4 col-lg-3"
               itemscope
               itemtype="http://schema.org/WPSideBar"
               role="complementary">
            {%- include sidebar.liquid %}
        </aside>
        <section id="content" class="col-12 col-sm-7 col-md-8 col-lg-9 p-4 pb-0">
            {{ content }}
        </section>
    </div>
</main>
{%- include footer.liquid %}
{%- include scripts.liquid %}
</body>
</html>