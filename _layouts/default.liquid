<!DOCTYPE html>
<html lang="{{ page.lang | default: site.lang | default: 'ru' }}">
{% include head.liquid %}
<body>

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ site.env.GOOGLE_TAG_MANAGER }}"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->

{% include header.liquid %}

<main class="container-lg" role="main">
    <div class="row">
        <aside id="sidebar"
               class="com col-12 col-sm-5 col-md-4 col-lg-3 mb-3"
               itemscope
               itemtype="http://schema.org/WPSideBar"
               role="complementary">
            {% include sidebar.liquid %}
        </aside>
        <section id="content" class="col p-4">
            {{ content }}
        </section>
    </div>
</main>

{% comment %}{% include footer.liquid %}{% endcomment %}
</body>
</html>