---
layout: default
---

{% comment %}https://github.com/wild-flame/jekyll-simple/blob/master/_layouts/post.html{% endcomment %}

<article id="post-page-{{ page.id }}"
         class="post-page"
         itemid="{{ page.url | relative_url }}"
         itemscope
         itemtype="http://schema.org/BlogPosting">

    {% include snippet/post/post-thumbnail.liquid
        src=page.image
        alt=page.title
        param='?w=942&h=218&fit=crop&fm=webp&auto=compress'
    %}
    <header class="post-page-header">
        {% include snippet/post/post-title.liquid
            title=page.title
            url=page.url
        %}
        {% include snippet/post/post-meta.liquid
            date=page.date
            content=page.content
            modified_date=page.modified_date
        %}
        {% include snippet/post/post-tags.liquid
            tags=page.tags
        %}
        {% include snippet/post/post-categories.liquid
            categories=page.categories
        %}
    </header>

    <div class="post-page-content" itemprop="articleBody">
        {{ content }}
    </div>

    <br>
    <br>

    {% include snippet/post/post-nav.liquid
        categories=page.categories
    %}
</article>