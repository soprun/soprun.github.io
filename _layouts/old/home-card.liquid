---
layout: default
---

{% if site.paginate %}
    {% comment %}{% assign posts = paginator.posts %}{% endcomment %}
{% else %}
    {% comment %}{% assign posts = site.posts %}{% endcomment %}
{% endif %}

{% assign posts = site.posts %}

{% if posts.size > 0 %}
    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-start">
        {% for post in posts %}
            <div class="col">
                {% include cards/card.liquid %}
            </div>
        {% endfor %}
    </div>
    {% include snippet/paginate.liquid %}
{% endif %}

<div class="page-content">
    {{ content }}
</div>