root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[Makefile]
indent_style = tab

[{*.markdown,*.md}]
trim_trailing_whitespace = false

[{Gemfile,_config.yml}]
indent_size = 2

[{*.html, *.liquid}]
insert_final_newline = false

