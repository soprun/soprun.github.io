BEGIN:VCARD
PROFILE:VCARD
VERSION:4.0
KIND:individual
LANG:{{ site.lang }}
TZ:{{ site.timezone }}
GENDER:{{ site.author.gender }}
N;CHARSET={{ site.encoding }}:{{ site.author.last_name }};{{ site.author.first_name }};;;
FN;CHARSET={{ site.encoding }}:{{ site.author.name }}
{% if site.author.nickname -%}
    NICKNAME;CHARSET=UTF-8:{{ site.author.nickname }}
{%- endif %}
ORG;CHARSET={{ site.encoding }}:{{ site.author.org.name }};{{ site.author.org.unit }}
TITLE;CHARSET=UTF-8:{{ site.author.org.role }}
BDAY:{{ site.author.birthday }}
REV:{{ 'now' | date: "%Y-%m-%d %H:%M" | date_to_xmlschema }}
SOURCE:https://soprun.com/{% link vcard.liquid %}
{% for email in site.author.email limit: 10 -%}
    EMAIL
    {%- for i in email.type -%}
        ;type={{ i }}
    {%- endfor -%}
    :{{- email.value }}
{% endfor %}
{%- for phone in site.author.phone limit: 10 -%}
    TEL
    {%- for i in phone.type -%}
        ;type={{ i }}
    {%- endfor -%}
    :{{- phone.value }}
{% endfor %}
{%- for url in site.author.url -%}
    URL
    {%- for i in url.type -%}
        ;type={{ i }}
    {%- endfor -%}
    :{{- url.value }}
{% endfor %}
{%- for social_profile in site.author.social_profile -%}
    X-SOCIALPROFILE
    {%- for i in social_profile.type -%}
        ;type={{ i }}
    {%- endfor -%}
    {%- if social_profile.username -%}
        ;x-apple:{{ social_profile.username }}
    {%- endif -%}
    :{{- social_profile.value }}
{% endfor -%}
PHOTO;PNG;ENCODING=BASE64:{% base64 assets/img/avatar-small.png %}
KEY;PGP;ENCODING=BASE64:{% base64 assets/pgp-public-key.asc %}
END:VCARD
