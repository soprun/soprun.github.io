{% comment %}https://images.unsplash.com/photo-1584433144859-1fc3ab64a957?w=100&h=500&fit=min&fm=webp&auto=compress{% endcomment %}

{% if include.src %}
    {% comment %}{%- assign param = include.param | default: '?w=400&fit=clip&crop=entropy,center&fm=webp&auto=compress' -%}{% endcomment %}
    {%- assign param = include.param | default: '?w=400&h=350&fit=min&crop=entropy,center&fm=webp&auto=compress' -%}
    {%- assign alt = include.alt | default: page.title | append: ' - ' | append: site.title -%}
    {%- assign src = include.src | append: param | relative_url -%}

    <picture class="post-thumbnail {% if page.page_show_image == false %}d-none{% endif %}"
             itemprop="image"
             itemscope
             itemtype="https://schema.org/ImageObject">
        {% comment %}<meta itemprop="url image" content="{{ source }}&output=jpg"/>{% endcomment %}
        {% comment %}<source srcset="{{ source }}&output=webp" type="image/webp" itemprop="url image"/>{% endcomment %}
        {% comment %}<source srcset="{{ source }}&output=jpg" type="image/jpg" itemprop="url image"/>{% endcomment %}
        <img
            class="img-fluid"
            itemprop="url image"
            src="{{ src }}"
            alt="{{ alt | escape }}"
            loading="lazy"
            decoding="async"/>
    </picture>
{% endif %}