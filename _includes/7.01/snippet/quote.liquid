{%- assign min = 1 -%}
{%- assign max = site.data.quotes | size -%}
{%- assign diff = max | minus: min -%}
{%- assign random_number = "now" | date: "%N" | modulo: diff | plus: min | minus: 1 -%}
{%- assign quote = site.data.quotes[random_number] %}
{%- if quote %}
    <figure>
        <blockquote class="blockquote"{% if quote.cite %} cite="{{ quote.cite }}"{% endif %}>
            {% if quote.title %}
                <div class="mb-2"><strong>{{ quote.title }}</strong></div>
            {% endif %}
            <p>{{ quote.quote }}</p>
        </blockquote>
        {%- if quote.author %}
            <figcaption class="blockquote-footer">{{ quote.author }}</figcaption>
        {%- endif %}
    </figure>
{% endif %}