<div class="page-headline-meta page-headline-categories">
    <i class="fa fa-tags fa-fw" aria-hidden="true"></i>
    Tags:
    {% if post %}
        {% assign categories = post.categories %}
    {% else %}
        {% assign categories = page.categories %}
    {% endif %}
    {% for category in categories %}
        <a class="categories-button" href="{{ site.baseurl }}/categories/#{{ category | slugize }}">
            {{ category }}
        </a>
        {% unless forloop.last %}
        {% endunless %}
    {% endfor %}
</div>