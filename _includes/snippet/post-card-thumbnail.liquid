{% assign file = include.file %}
{% unless file %}
    {% assign file = 'https://via.placeholder.com/300x225' %}
{% endunless %}

{% assign alt = include.alt %}
{% unless alt %}
    {% assign alt = page.title | append: ' - ' | append: site.title %}
{% endunless %}

{% assign lazyload = include.lazyload %}

{% if lazyload == nil %}
    {% assign lazyload = true %}
{% endif %}

{% if lazyload == true %}
    {% comment %}{% assign src = 'data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==' %}{% endcomment %}
    {% assign src = 'https://dummyimage.com/400x16:9' %}
    {% assign data-src = file | relative_url %}
{% else %}
    {% assign src = file | relative_url %}
    {% assign data-src = '' %}
{% endif %}

{% comment %}<a href="{{ post.url }}" class="post-card-image-link">{% endcomment %}
{% comment %}<img src="{{ src }}"{% endcomment %}
{% comment %}data-src="{{ data-src }}"{% endcomment %}
{% comment %}class="img-fluid lazyload"{% endcomment %}
{% comment %}alt="{{ alt }}">{% endcomment %}
{% comment %}</a>{% endcomment %}

<a href="{{ post.url }}" class="post-card-thumbnail">
    <picture class="post-card-thumbnail-picture">
        {% comment %}<source srcset="{{ '/assets/img/logo.avif' | relative_url }} 1x, {{ '/assets/img/logo-2x.avif' | relative_url }} 2x" type="image/avif" />{% endcomment %}
        {% comment %}<source srcset="{{ '/assets/img/logo.webp' | relative_url }} 1x, {{ '/assets/img/logo-2x.webp' | relative_url }} 2x" type="image/webp" />{% endcomment %}
        <source srcset="{{ data-src | relative_url }}"/>
        <img
            class="post-card-thumbnail-img"
            decoding="async"
            loading="lazy"
            src="{{ src | relative_url }}"
            {% comment %}src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAA1JREFUGFdjOHPmzH8ACDADZKt3GNsAAAAASUVORK5CYII="{% endcomment %}
            {% comment %}src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAA1JREFUGFdjOHPmzH8ACDADZKt3GNsAAAAASUVORK5CYII="{% endcomment %}
            {% comment %}src="data:image/png;base64,"{% endcomment %}
            {% comment %}src="https://via.placeholder.com/480x360"{% endcomment %}
            {% comment %}src="{{ src | relative_url }}"{% endcomment %}
            alt="{{ alt | escape }}"/>

    </picture>
</a>