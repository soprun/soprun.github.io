{%- assign snippet_link = include.params %}
{%- assign sizes = include.sizes %}
{%- assign title = include.title %}

{%- unless include.params.href -%}
    {%- assign snippet_link = include.params.last %}
{%- endunless -%}

{%- assign href = snippet_link.href %}

{%- if include.href -%}
    {%- assign href = include.href %}
{%- endif -%}

{%- unless title -%}
    {%- assign title = snippet_link.title %}
{%- endunless -%}

<link
    {%- if snippet_link.type %} type="{{ snippet_link.type }}"{% endif %}
    {%- if snippet_link.rel %} rel="{{ snippet_link.rel }}"{% endif %}
    {%- if sizes %} sizes="{{ sizes }}"{% endif %}
    {%- if href %} href="{{ href | relative_url }}"{% endif %}
    {%- if title %} title="{{ title | escape }}"{%- endif -%}
/>