{% assign alt = include.alt %}
{% unless alt %}
    {% assign alt = page.title | append: ' - ' | append: site.title %}
{% endunless %}

{% assign file = include.file %}
{% comment %}{% assign file = include.file | default: 'https://via.placeholder.com/1300x300' %}{% endcomment %}

{% if file %}
    {% assign file = 'https://images.weserv.nl/?url=' | append: file | append: '&fit=cover&maxage=1d' | relative_url %}
    {% assign fileBlur = 'https://images.weserv.nl/?url=' | append: file | append: '&w=20&h=20xwx&fit=cover&blur=5&maxage=1d' | relative_url %}
{% endif %}

{% if file %}
    <picture class="post-thumbnail {{ include.class }}"
             itemprop="logo"
             itemscope
             itemtype="https://schema.org/ImageObject">
        <meta itemprop="url image" content="{{ file }}"/>
        <source srcset="{{ file }}"/>
        <img
            class="img-fluid"
            decoding="async"
            loading="lazy"
            src="{{ fileBlur }}"
            alt="{{ alt | escape }}"/>
    </picture>
{% endif %}
