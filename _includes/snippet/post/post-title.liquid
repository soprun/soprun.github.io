{% assign title = include.title | default: post.title | escape %}
{% assign url = include.url | default: post.url %}

{% if title %}
    <h1 class="post-title text-center {{ include.class }}"
        itemprop="headline">
        {% if show_title_link == false or show_read_more == false %}
            {{ title }}
        {% else %}
            <a href="{{ url | relative_url }}"
               aria-label="{{ title }}"
               itemprop="mainEntityOfPage">
                {{ title }}
            </a>
        {% endif %}
    </h1>

    {% if page.subtitle != empty %}
        <h2 class="text-center fs-4 text-dark">
            {{ page.subtitle }}
        </h2>
    {% endif %}
{% endif %}
