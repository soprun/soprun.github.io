{%- assign tags = include.tags | default: post.tags %}
{%- assign size = tags | size %}

{% if size != 0 %}
    <div class="post-tags {{ include.class }}">
        <i class="fa-solid fa-tags" aria-hidden="true"></i>
        <span>Tags:</span>
        {% for tag in tags %}
            <span class="badge bg-primary" itemprop="keywords">
                {% comment %}<a rel="tag" href="">{{ tag }}</a>{% endcomment %}
                {{ tag }}
            </span>
        {% endfor %}
    </div>
{% endif %}