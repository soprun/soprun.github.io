<nav class="nav flex-column nav-pills"
     role="navigation"
     itemscope
     itemtype="https://www.schema.org/SiteNavigationElement">
    {% for item in site.data.navigation %}
        <a class="nav-link {% if page.url == item.link %}active{% endif %}"
           href="{{ item.link }}"
           itemprop="url">
            <span itemprop="name">
                {{ item.name }}
            </span>
        </a>
    {% endfor %}
</nav>