<head>
    <meta charset="{{ site.encoding }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    {% if page.date -%}
        <meta http-equiv="Last-Modified" content="{{ page.date | date_to_xmlschema }}"/>
    {%- endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="medium" content="blog"/>
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="{{ site.color.background }}"/>
    {% comment %}<meta name="author" content="{{ site.author.name }}">{% endcomment %}
    <meta name="reply-to" content="{{ site.author.email }}">
    <meta name="copyright" content="{{ copyright | strip_html }}">
    <meta name="keywords" content="{{ page_keywords }}">
    <meta name="robots" content="{% if page.noindex %}noindex, follow{% else %}index, follow{% endif %}"/>

    <meta name="supported-color-schemes" content="light dark">
    <base href="{{ base_url }}">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>