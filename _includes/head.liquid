{%- assign application-name = site.title %}
{%- assign theme-color = '#cfc3ee' %}
{%- assign baseurl = site.baseurl | prepend: site.url -%}
{%- if jekyll.environment != 'production' and site.env.CF_PAGES_URL %}
    {%- assign baseurl = site.env.CF_PAGES_URL %}
{% endif %}
{%- assign keywords = page.tags | reverse -%}
{%- assign keywords = keywords | concat: site.keywords | join: ', ' | truncatewords: 10 %}
{%- assign copyright = 'Copyright 2022, soprun.com' %}

<head>
    <base href="{{ baseurl | relative_url }}">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="medium" content="blog"/>
    <meta name="theme-color" content="#cfc3ee"/>
    {%- comment %}<meta name="author" content="{{ site.author.name }}">{% endcomment %}
    <meta name="reply-to" content="{{ site.author.email }}">
    <meta name="copyright" content="{{ copyright }}">
    <meta name="keywords" content="{{ keywords }}">
    {%- if page.noindex == true %}
        <meta name="robots" content="noindex, nofollow"/>
    {% endif %}

    {% seo %}
    {% comment %}{% feed_meta %}{% endcomment %}

    <link rel="preload"
          href="{{ '/assets/css/style.css' | relative_url }}?v={{ site.release_version }}"
          as="style"
          onload="this.onload=null;this.rel='stylesheet'">

    <noscript>
        <link rel="stylesheet" href="{{ '/assets/css/style.css' | relative_url }}?v={{ site.release_version }}">
    </noscript>

    {% for link in site.data.links.head_link -%}
        {% include snippet/link.liquid
            params=link
        %}
    {% endfor %}

    {% include head/icons.liquid %}
    {% include head/sentry.liquid %}
    {% include head/yandex-metrika.liquid %}
    {% include head/google-analytics.liquid %}
</head>