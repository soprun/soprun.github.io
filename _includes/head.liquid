<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="medium" content="blog"/>

    {%- if page.noindex == true -%}
        <meta name="robots" content="noindex, nofollow"/>
    {%- endif -%}

    {% assign baseurl = site.baseurl | prepend: site.url %}
    {% if jekyll.environment != 'production' and site.env.CF_PAGES_URL %}
        {% assign baseurl = site.env.CF_PAGES_URL %}
    {% endif %}
    <base href="{{ baseurl | relative_url }}">

    <meta name="keywords" content="{{ site.keywords | join: ', ' }}">
    {% comment %}<meta name="description" content="{{ content | strip_html | truncatewords: 25 }}">{% endcomment %}
    {% comment %}<title>{{ page.title }} | {{ site.sitename }} | {{ site.tagline }}</title>{% endcomment %}

    {% seo %}
    {% comment %}{% feed_meta %}{% endcomment %}

    <link rel="stylesheet"
          href="{{ '/assets/css/style.css' | relative_url }}?v={{ site.release_version }}"
          media="print"
          onload="this.media='all'; this.onload = null">

    <link rel="shortcut icon" type="image/x-icon" href="{{ 'favicon.ico' | relative_url }}">

    <link type="application/atom+xml" rel="alternate" href="{{ '/atom.xml' | absolute_url }}" title="{{ site.title }}"/>
    <link type="application/rss+xml" rel="alternate" href="{{ '/rss.xml' | absolute_url }}" title="{{ site.title }}"/>
    {% comment %}<link type="application/xml" rel="sitemap" href="{% link sitemap.liquid %}"/>{% endcomment %}
</head>