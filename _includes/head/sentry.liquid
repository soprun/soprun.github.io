{%- if jekyll.environment != 'development' and site.env.SENTRY_DSN %}
    <script
        src="https://browser.sentry-cdn.com/7.5.1/bundle.min.js"
        integrity="sha384-hqfUBwcPJtjcyE8jgb0/5s4wee/hsu/uZckh1FWBsUXNpjPYhee9ohNwbZE6N9Xt"
        crossorigin="anonymous"
    ></script>
    <script>
        Sentry.onLoad(function () {
            Sentry.init({
                dsn: "{{ site.env.SENTRY_DSN }}",
                release: "{{ site.release_version | default: 'unknown' }}",
                environment: "{{ jekyll.environment }}",
                tracesSampleRate: 1.0,
                autoSessionTracking: true
            });
        });
    </script>
{% endif %}