{% if page.image.feature %}
    {% assign f = page.image.feature | split: '.' %}
    <img src="{{ f[0] | relative_url }}-320.{{ f[1] }}"
         srcset="{{ f[0] | relative_url }}-768.{{ f[1] }} 768w,
               {{ f[0] | relative_url }}-1024.{{ f[1] }} 1024w,
               {{ f[0] | relative_url }}.{{ f[1] }} 1920w"
         alt="{{ page.title }}">
{% endif %}