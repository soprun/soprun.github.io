<section id="sidebar-logo" class="vcard text-center">
    <a href="{{ '/' | relative_url }}" target="_self" rel="home" itemprop="url">
        <picture>
            <img
                class="logo img-fluid rounded-circle"
                width="150"
                height="150"
                srcset="{{ '/assets/img/logo.webp' | absolute_url }} 1x,
                        {{ '/assets/img/avatar-large.webp' | absolute_url }} 2x"
                src="{{ '/assets/img/logo.webp' | absolute_url }}"
                alt="{{ site.title | escape }}"/>
        </picture>
    </a>
</section>

<section id="sidebar-author" class="vcard text-center">
    <hgroup>
        <h1 class="fn fs-2 fw-light">
            {% if site.author.url %}
                <a href="{{ baseurl | relative_url }}" class="url text-decoration-none">
                    {{ site.author.name }}
                </a>
            {% else %}
                {{ site.author.name | newline_to_br }}
            {% endif %}
        </h1>
        <h2 class="fs-6 fw-light">{{ site.author.description }}</h2>
    </hgroup>
</section>

