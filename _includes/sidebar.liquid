<div class="sticky-top">
    <div id="sidebar-header" class="p-4 mb-3 bg-light rounded">
        <div class="row">
            <div id="sidebar-logo" class="col col-12 col-md-auto col-sm-6">
                <a href="{{ '/' | relative_url }}" target="_self">
                    <picture class="text-center mb-3 d-block">
                        <img class="img-fluid mx-auto d-block rounded-circle"
                             src="{{ '/assets/img/avatar-small.png' | relative_url }}"
                             srcset="{{ '/assets/img/avatar-large.png' | relative_url }} 2x"
                             alt="{{ site.title | escape }}"/>
                        {% comment %}<img src="https://via.placeholder.com/800/09f/fff.png?text=800w+Fallback"{% endcomment %}
                        {% comment %}srcset="https://via.placeholder.com/320/09f/fff.png?text=320w 320w,{% endcomment %}
                        {% comment %}https://via.placeholder.com/480/09f/fff.png?text=480w 480w,{% endcomment %}
                        {% comment %}https://via.placeholder.com/800/09f/fff.png?text=800w 800w,{% endcomment %}
                        {% comment %}https://via.placeholder.com/480/09f/fff.png?text=1200w 1200w,{% endcomment %}
                        {% comment %}https://via.placeholder.com/480/09f/fff.png?text=1800w 1800w"{% endcomment %}
                        {% comment %}sizes="(min-width: 320px) 280px,{% endcomment %}
                        {% comment %}(min-width: 480px) 440px,{% endcomment %}
                        {% comment %}(min-width: 768px) 768px,{% endcomment %}
                        {% comment %}(min-width: 1200px) 1200px,{% endcomment %}
                        {% comment %}(min-width: 1800px) 100vw"{% endcomment %}
                        {% comment %}class="img-fluid img-thumbnail"{% endcomment %}
                        {% comment %}alt="For some reason the image did not load">{% endcomment %}
                    </picture>
                </a>
            </div>
            <div class="col">
                <p id="sidebar-title" class="mb-3 t">
                    <a href="{{ site.url | absolute_url }}" class="fw-light text-decoration-none">
                        {{ site.name }}
                    </a>
                </p>
                <p id="sidebar-description" class="mb-0 text-secondary">
                    {{ site.description }}
                    {% comment %}Hi! Welcome to my blog! 👋🏻 <br>{% endcomment %}
                    {% comment %}I am a Technical Architect at <br>{% endcomment %}
                    {% comment %}<a href="https://likecentre.ru"{% endcomment %}
                    {% comment %}class="text-decoration-none"{% endcomment %}
                    {% comment %}rel="noopener noreferrer"{% endcomment %}
                    {% comment %}target="_blank">Like Центр</a>!{% endcomment %}
                </p>
            </div>
        </div>
    </div>
    <div id="sidebar-footer">
        {% comment %}{% include navigation.liquid %}{% endcomment %}
        {% include snippet/public-links.liquid %}

        {% comment %}<div class="p-2">{% endcomment %}
            {% comment %}{% include snippet/latest-posts.liquid %}{% endcomment %}
        {% comment %}</div>{% endcomment %}
        <div class="p-2 text-muted">
            © All rights reserved.
        </div>
    </div>
</div>