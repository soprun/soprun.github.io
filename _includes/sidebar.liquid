<section id="sidebar-logo" class="vcard text-center">
    <a href="{{ '/' | relative_url }}" target="_self" rel="home" itemprop="url">
        <picture itemprop="logo"
                 itemtype="https://schema.org/ImageObject">
            <img
                class="logo img-fluid rounded-circle"
                width="150"
                height="150"
                itemprop="url image"
                srcset="{{ site.logo | relative_url }}"
                src="{{ site.logo | relative_url }}"
                alt="{{ site.title | escape }}"/>
        </picture>
    </a>
</section>

<section id="sidebar-author" class="vcard text-center">
    <div class="fn fs-2 fw-light d-none">
        {% if site.author.url %}
            <a class="url"
               itemprop="name"
               href="{{ site.url | relative_url }}">
                {{ site.author.name }}
            </a>
        {% else %}
            {{ site.author.name | newline_to_br }}
        {% endif %}
    </div>
    <div class="fs-6 fw-light" itemprop="description">
        {{ site.author.description }}
        <br>
        <a itemprop="url" href="/mentoring" style="color:#dc3545" rel="">
            <span itemprop="name">IT-–º–µ–Ω—Ç–æ—Ä—Å—Ç–≤–æ üìö</span>
        </a>
    </div>
</section>

