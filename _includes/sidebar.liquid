<section id="sidebar-logo" class="text-center">
    <a href="{{ '/' | relative_url }}" target="_self" rel="home" itemprop="url">
        <picture>
            <img
                class="img-fluid rounded-circle"
                width="150"
                height="150"
                srcset="{{ '/assets/img/logo.webp' | relative_url }} 1x,
                        {{ '/assets/img/avatar-large.webp' | relative_url }} 2x"
                src="{{ '/assets/img/logo.webp' | relative_url }}"
                alt="{{ site.title | escape }}"/>
        </picture>
    </a>
</section>

<section id="sidebar-author" class="text-center">
    <h2>
        {% if site.author.url %}
            <a href="{{ baseurl | relative_url }}" class="fw-light text-decoration-none">
                {{ site.author.name }}
            </a>
        {% else %}
            {{ site.author.name }}
        {% endif %}
    </h2>
    <p>{{ site.author.description }}</p>
</section>

<section id="sidebar-nav">
    {% include snippet/sidebar/navigation.liquid %}
</section>

<section id="sidebar-contact">
    {% include snippet/sidebar/sidebar-contact.liquid %}
</section>

{% comment %}{% include snippet/public-links.liquid %}{% endcomment %}
{% comment %}<div class="p-2">{% endcomment %}
{% comment %}{% include snippet/latest-posts.liquid %}{% endcomment %}
{% comment %}</div>{% endcomment %}