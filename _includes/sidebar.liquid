                        {% comment %}https://via.placeholder.com/480/09f/fff.png?text=1200w 1200w,{% endcomment %}
                        {% comment %}https://via.placeholder.com/480/09f/fff.png?text=1800w 1800w"{% endcomment %}
                        {% comment %}sizes="(min-width: 320px) 280px,{% endcomment %}
                        {% comment %}(min-width: 480px) 440px,{% endcomment %}
                        {% comment %}(min-width: 768px) 768px,{% endcomment %}
                        {% comment %}(min-width: 1200px) 1200px,{% endcomment %}
                        {% comment %}(min-width: 1800px) 100vw"{% endcomment %}
                        {% comment %}class="img-fluid img-thumbnail"{% endcomment %}
                        {% comment %}alt="For some reason the image did not load">{% endcomment %}
