    {% comment %}srcset="{{ include.file }}?auto=format&fit=clip&q=90&&w={{ include.width }} {{ include.width  | times: 2 }}w,{% endcomment %}
             {% comment %}{{ include.file }}?auto=format&fit=clip&q=40&w={{ include.width  | times: 2 }} {{ include.width  | times: 2 }}w"{% endcomment %}
    {% comment %}src="{{ include.file }}"{% endcomment %}
    src="{{ include.file }}?auto=format&fit=clip&q=40&w=10&h=10&blur=50"
    class="{% if include.class %}{{ include.class }}{% else %}img-fluid{% endif %}"
    title="{{ include.title }}"
    alt="{{ include.alt }}"
    width="{{ include.width }}"
    height="{{ include.height }}"
    {% if include.lazy %}loading="lazy"{% endif %}
    sizes="100vw">


