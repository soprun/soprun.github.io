<table class="container" role="presentation">
    <thead aria-hidden="true" aria-label="table-head">
    <tr>
        <td colspan="2" style="border-bottom: 1px solid var(--color-border); height:1px; width:100%;">
            &nbsp;
        </td>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="picture" rowspan="6">
            <picture role="img">
                <source srcset="{{ site.author.photo_webp | absolute_url }}" type="image/webp">
                <img src="{{ site.author.photo | absolute_url | escape }}"
                    {% comment %}src="data:image/png;base64,{{ "assets/img/avatar-small.png" | encode_base64_hash }}"{% endcomment %}
                     alt="{{ site.author.name | escape }}"
                     width="100"
                     height="100"
                     loading="lazy"
                     decoding="async">
            </picture>
        </td>
        <td class="content">
            <table>
                <tr>
                    <td class="heading" colspan="2">
                        <div class="header-title">
                            {{ site.author.name }}
                        </div>
                        <div class="header-subtitle">
                            {{ site.author.org.role }}
                            <!--
                            {% if site.author.org.name %}
                                <span>/</span>
                                <small>
                                    {% if site.author.org.url %}
                                        <a class="u-url p-name" href="{{ site.author.org.url }}" target="_blank">
                                            {{ site.author.org.name | escape }}
                                        </a>
                                    {% else %}
                                        {{ site.author.org.name | escape }}
                                    {% endif %}
                                </small>
                            {% endif %}
                            -->
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>Email üìß
                    </td>
                    <td>
                        <a class=""
                           role="link"
                           aria-label="email name"
                           href="mailto:{{ site.author.email | escape }}">
                            {{ site.author.email | escape }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>Phone üìû</td>
                    <td>
                        <a class="p-tel" href="tel:{{ site.author.phone | escape }}">
                            {{ site.author.phone | escape }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>Website üìù</td>
                    <td>
                        <a class="u-url"
                           href="{{ site.author.url | escape }}"
                           target="_blank"
                           rel="me">
                            {{ site.author.url | escape }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>GPG ü™™‚Äç</td>
                    <td>
                        <a href="{{ site.author.gpg_public_key | escape }}" target="_blank">
                            {{ site.author.gpg_fingerprint_short | escape }}
                        </a>
                    </td>
                </tr>
                {% comment %}<tr aria-hidden="true">{% endcomment %}
                    {% comment %}<td colspan="2">{% endcomment %}
                        {% comment %}<a download="{{ site.url }}{{ site.baseurl }}{% link tools/vcard.liquid %}"{% endcomment %}
                           {% comment %}href="{{ site.url }}{{ site.baseurl }}{% link tools/vcard.liquid %}"{% endcomment %}
                           {% comment %}target="_blank"{% endcomment %}
                           {% comment %}style="font-size: smaller;color: grey">{% endcomment %}
                            {% comment %}–°–æ—Ö—Ä–∞–Ω–∏—Ç—å –∫–æ–Ω—Ç–∞–∫—Ç—ã (vCard){% endcomment %}
                        {% comment %}</a>{% endcomment %}
                    {% comment %}</td>{% endcomment %}
                {% comment %}</tr>{% endcomment %}
            </table>
        </td>
    </tr>
    </tbody>
    <tfoot aria-hidden="true" aria-label="table-footer">
    <tr>
