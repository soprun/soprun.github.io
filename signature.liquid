    <tbody>
    <tr>
        <td class="h-card" style="text-align: center;vertical-align: middle;padding:1.5rem">
            <img class="u-photo"
                 src="{{ site.author.photo }}"
                 alt="{{ site.author.name | escape }}"
                 title="{{ site.author.name | escape }}"
                 width="200"
                 height="200">
        </td>
        <td class="h-card" style="text-align: left;vertical-align: middle">
            <span style="display: none">
                    <span class="dt-bday">{{ site.author.birthday }}</span>
                    <span class="p-sex">{{ site.author.gender }}</span>
                    <span class="p-country-name">Russia</span>
                    <span class="p-region">Moscow</span>
                </span>
            <h1 style="margin: 0">
                <a class="p-name u-url"
                   href="{{ site.author.url }}"
                   target="_blank"
                   rel="me">
                    {{ site.author.name | escape }}
                </a>
                <small class="p-role">{{ site.author.org.role | escape }}</small>
            </h1>
            <h3 class="h-card p-org" style="margin: 0">
                <a class="u-url p-name" href="{{ site.author.org.url }}" target="_blank">
                    {{ site.author.org.name | escape }}
                </a>
                <small>{{ site.author.org.unit | escape }}</small>
            </h3>
            <p><b>Email üìß</b><br>
